{{yield this.paginatedItems}}

<div class="row center mt-20 mb-20">
    <div class="btn-toolbar mb-3 justify-content-between text-center m-auto" role="toolbar">
        <div class="btn-group" role="group" aria-label="First group">
            {{#if this.showPrevious}}
                <button {{action "previousClicked"}} type="button" class="btn btn-outline-secondary">&laquo;</button>
            {{else}}
                <button type="button" class="btn btn-outline-secondary" disabled>&laquo;</button>
            {{/if}}

  
            {{#each this.pageNumbers as |pageNumber|}}
                <button {{action "pageClicked" pageNumber}} type="button" class="btn btn-outline-primary">{{pageNumber}}</button>
            {{/each}}


            {{#if this.showNext}}
                <button {{action "nextClicked"}} type="button" class="btn btn-outline-secondary">&raquo;</button>
            {{else}}
                <button type="button" class="btn btn-outline-secondary" disabled>&raquo;</button>
            {{/if}}
        </div>
    </div>
</div>