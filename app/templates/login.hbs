<div class="container" style="margin-top:40px">
	<div class="row">
		{{!-- Make more mobile friendly--}}
		<div class="col-sm-6 col-md-4 col-md-offset-4 login-box shadow-2" >
			<form>

					<div class="row">
						<div class="login-img-wrapper">
							<img src="../../../public/assets/favicon.ico" class="img-responsive login-log">
						</div>
					</div>
					<div class="row login-box">
						<div class="col-sm-12 col-md-10 col-md-offset-1">
							{{#if auth.errorMsg}}
							<div class="alert alert-danger">
								<p style="text-align: center;">Incorrect username/password</p>
							</div>
							{{/if}}
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-user"></i>
									</span>
									{{input type="text" class="input-sm form-control" value=auth.username enter="login" placeholder="Username" autofocus="autofocus"}}
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-lock"></i>
									</span>
									{{input type="text" class="input-sm form-control" value=auth.password enter="login" placeholder="Password" type="password"}}
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									{{input type="checkbox" checked=auth.remember}}
									Remember me on this computer
								</div>
							</div>

							<div class="form-group">
								<input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in" {{action "login"}}>
							</div>
							<div>
							<!--	<p style="text-align:center;">Need an account? {{#link-to "register"}}Register Now.{{/link-to}}</p> -->
							</div>
						</div>
					</div>

			</form>
		</div>
	</div>
</div>
