<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{outlet}}
            <div class="jumbotron text-center">
                <h1>Checkout<br></h1>
            </div>

            <form class="form-horizontal">
                {{!-- <h5 style="text-align: left; margin-bottom: 10px;">Personal Information</h5> --}}
                <div class="row">
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="first">First Name</span>
                            </div>
                            {{#if auth.isLoggedIn}}
                                {{input type="text" value=first class="form-control" placeholder="John" aria-label="First" aria-describedby="first" required="true"}}
                            {{/if}}
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="last">Last Name</span>
                            </div>
                            {{input type="text" value=last class="form-control" placeholder="Doe" aria-label="Last" aria-describedby="last" required="true"}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="email">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Email&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            </div>
                            {{input type="email" value=email class="form-control" placeholder="johndoe@gmail.com" aria-label="Email" aria-describedby="email" required="true"}}
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="phone">&nbsp;&nbsp;&nbsp;&nbsp;Phone&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            </div>
                            {{input type="tel" value=phone class="form-control" placeholder="(402) 867-5309" aria-label="Phone" aria-describedby="phone" required="true"}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="address">&nbsp;&nbsp;Address&nbsp;&nbsp;</span>
                            </div>
                            {{input type="text" value=address class="form-control" placeholder="1234 South Monroe Street" aria-label="Address" aria-describedby="address" required="true"}}
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="students">&nbsp;Students&nbsp;&nbsp;</span>
                            </div>
                            {{input type="number" value=students min="1" max="999" class="form-control" placeholder="47" aria-label="Students" aria-describedby="students" required="true"}}
                        </div>
                    </div>
                </div>
                <br>
            </form>

            <div class="card text-center" style="width: 100%;">
                <div class="card-body" style="width: 100%;">
                    
                    <h4 class="card-title">Items in Cart:</h4>
                    <hr>

                    {{#each this.cart.items as |item|}}
                        <p class="card-text">{{item.category.categoryname}} &raquo; <p class="text-primary" style="display: inline-block;">{{item.partname}}</p></p>
                    {{/each}}

                </div>
            </div>
            <br>

            <button type="submit" class="btn btn-success" style="float: right;">Checkout &raquo;</button>

        </div>
    </div>
</div>
